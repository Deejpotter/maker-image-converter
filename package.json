{
  "name": "maker-image-converter",
  "version": "1.3.0",
  "description": "Batch image converter to WebP with GUI",
  "main": "src/main.js",
  "scripts": {
    "dev": "electron .",
    "build": "node ./scripts/build-with-version.js",
    "build:version": "node ./scripts/build-with-version.js",
    "build:versioned": "node ./scripts/build-with-version.js",
    "test": "jest --runInBand --detectOpenHandles",
    "convert": "node ./bin/convert.js"
  },
  "build": {
    "appId": "com.example.maker-image-converter",
    "productName": "Maker Image Converter",
    "files": [
      "src/**",
      "assets/**",
      "images/**",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "artifactName": "${productName} Installer ${version}.${ext}"
    }
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "26.6.10",
    "electron-builder": "^24.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^30.2.0"
  },
  "dependencies": {
    "sharp": "^0.33.0"
  }
}
